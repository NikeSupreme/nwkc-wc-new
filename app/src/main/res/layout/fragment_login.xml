<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="576dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_x="672dp"
        android:layout_y="162dp"
        android:gravity="center"
        android:text="厕位可视化管理系统"
        android:textColor="#00B09F"
        android:textSize="48sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_x="726dp"
        android:layout_y="412dp"
        android:gravity="center"
        android:text="网关IP地址"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="488dp"
        android:layout_height="50dp"
        android:layout_x="716dp"
        android:layout_y="447dp"
        android:background="@drawable/bg_et"
        android:paddingHorizontal="10dp"
        android:textColor="#fff"
        android:textSize="13.5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_x="730dp"
        android:layout_y="525dp"
        android:gravity="center"
        android:text="网关号"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="488dp"
        android:layout_height="50dp"
        android:layout_x="716dp"
        android:layout_y="560dp"
        android:background="@drawable/bg_et"
        android:paddingHorizontal="10dp"
        android:textColor="#fff"
        android:textSize="13.5sp" />

    <Button
        android:id="@+id/tv_login"
        android:layout_width="488dp"
        android:layout_height="50dp"
        android:layout_x="716dp"
        android:layout_y="689dp"
        android:background="@drawable/bg_et"
        android:focusable="true"
        android:text="登录"
        android:textColor="#00FFEC"
        android:textSize="15sp" />

</AbsoluteLayout>